<mvc:View
    controllerName="aclaracionesfront.controller.MainView"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <App id="_IDGenApp">
        <pages>
            <Page
                id="_IDGenPage"
                title="{i18n>clarifications.title}"
                showNavButton="false"
                showSubHeader="false"
                navButtonPress="onNavBack"
            >
                <content>
                    <Table
                        noDataText="{i18n>clarifications.without}"
                        id="idTableAcla"
                        items="{obtenAcla>/results}"
                    >
                        <headerToolbar>
                            <Toolbar
                                id="_IDGenToolbar"
                                width="auto"
                                height="46px"
                                design="Auto"
                                visible="true"
                                enabled="true"
                            >
                                <content>
                                    <Title
                                        id="_IDGenTitle"
                                        text="{i18n>clarifications.send}"
                                        titleStyle="Auto"
                                        width="auto"
                                        textAlign="Begin"
                                        visible="true"
                                    />
                                    <ToolbarSpacer
                                        id="_IDGenToolbarSpacer"
                                        width=""
                                    />
                                    <SearchField
                                        id="_IDGenSearchField"
                                        value=""
                                        placeholder="{i18n>clarifications.search}"
                                        showSearchButton="true"
                                        visible="true"
                                        width="auto"
                                        liveChange="filtrado"
                                    />
                                    <Select id="selectFilter">
                                        <items>
                                            <core:Item id="_IDGenItem1"
                                                key="Id"
                                                text="{i18n>clarifications.id}"
                                            />
                                            <core:Item id="_IDGenItem2"
                                                key="Documents"
                                                text="{i18n>clarifications.numDoc}"
                                            />
                                            <core:Item id="_IDGenItem3"
                                                key="DocumentType"
                                                text="{i18n>clarifications.typeDoc}"
                                            />
                                            <core:Item id="_IDGenItem4"
                                                key="Message"
                                                text="{i18n>clarifications.textBrief}"
                                            />
                                            <core:Item id="_IDGenItem6"
                                                key="Status"
                                                text="{i18n>clarifications.status}"
                                            />
                                        </items>
                                    </Select>
                                </content>
                                <tooltip />
                            </Toolbar>
                        </headerToolbar>
                        <items>
                            <ColumnListItem
                                type="Active"
                                id="item3"
                            >
                                <cells>
                                    <Text
                                        xmlns="sap.m"
                                        id="celIdAcla"
                                        text="{obtenAcla>Id}"
                                    />
                                    <Text
                                        id="celNumDoc"
                                        text="{obtenAcla>Documents}"
                                    />
                                    <Text
                                        id="celTipoDoc"
                                        text="{obtenAcla>DocumentType}"
                                    />
                                    <Text
                                        id="celTxtBreve"
                                        text="{obtenAcla>Message}"
                                    />
                                    <Text
                                        id="celFecha"
                                        text="{path: 'obtenAcla>Date', formatter: '.formatDate'}"
                                    />
                                    <Text
                                        id="celStatus"
                                        text="{obtenAcla>Status}"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                        <columns>
                            <Column id="column0_1551145905984">
                                <header>
                                    <Text
                                        text="{i18n>clarifications.id}"
                                        id="colIdAcla"
                                    />
                                </header>
                            </Column>
                            <Column id="column0">
                                <header>
                                    <Label
                                        text="{i18n>clarifications.numDoc}"
                                        id="colNumDoc"
                                    />
                                </header>
                            </Column>
                            <Column id="column1">
                                <header>
                                    <Label
                                        text="{i18n>clarifications.typeDoc}"
                                        id="colTipoDoc"
                                    />
                                </header>
                            </Column>
                            <Column id="column2">
                                <header>
                                    <Label
                                        text="{i18n>clarifications.textBrief}"
                                        id="colTxtBreve"
                                    />
                                </header>
                            </Column>
                            <Column id="column2_1551147417412">
                                <header>
                                    <Text
                                        text="{i18n>clarifications.date}"
                                        id="colFecha"
                                    />
                                </header>
                            </Column>
                            <Column id="column3">
                                <header>
                                    <Text
                                        text="{i18n>clarifications.status}"
                                        id="colEstatus"
                                    />
                                </header>
                            </Column>
                        </columns>
                    </Table>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
