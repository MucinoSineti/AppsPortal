<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>matdoc.title}">
		<l:Grid defaultSpan="L12 M12 S12" width="800px" id="idGrid">
			<l:content>
				<Table items="{dDocument>/items}">
					<columns>
						<Column>
							<Text text="{i18n>matdoc.doc}"/>
						</Column>
						<Column>
							<Text text="{i18n>matdoc.reference}"/>
						</Column>
						<Column>
							<Text text="{i18n>matdoc.quantity}"/>
						</Column>
						<Column>
							<Text text="{i18n>matdoc.unity}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Active">
							<cells>
								<Text text="{dDocument>docNo}"/>
								<Text text="{dDocument>delivNote}"/>
								<Text text="{dDocument>qty}"/>
								<Text text="{dDocument>meins}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</l:content>
		</l:Grid>
		<buttons>
			<Button text="{i18n>matdoc.dialogCloseButtonText}" press="onCloseDialog"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>