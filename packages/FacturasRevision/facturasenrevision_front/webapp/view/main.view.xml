<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	 controllerName="facturasenrevisionfront.controller.main"> 
    <App>
		<pages>
			<Page title="Facturas en RevisiÃ³n" showNavButton="false" navButtonPress="onNavBack" class="sapUiContentPadding" id="docFactRList">
				<content>
					<Table noDataText="{appTxts>/invoice.noData}" id="documentList" items="{facturas>/}" mode="MultiSelect">
						<items>
							<ColumnListItem type="Active">
								<cells>
									<Text text="{facturas>SupplierInvoice}"/>
									<Text text="{facturas>SupplierName}" width="auto" maxLines="3" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
									<Text text="{facturas>CompanyCodeName}"/>
									<Text text="{facturas>ReferenceDocument}"/>
									<Text text="{path: 'facturas>CreationDate', formatter: '.formatODataDate'}"/>
									<ObjectNumber xmlns:mvc="sap.ui.core.mvc" xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.commons.layout"
										xmlns="sap.m"
										number="{parts: [{path: 'facturas>SupplierInvoiceItemAmount'}, {path: 'facturas>DocumentCurrency'}], type:'sap.ui.model.type.Currency', formatOptions: {showMeasure:false}}"
										unit="{facturas>DocumentCurrency}" emphasized="false" state="None" id="number1" />
								</cells>
							</ColumnListItem>
						</items>
						<columns>
							<Column>
								<header>
									<Label text="Num. Factura Preliminar"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="Nombre del proveedor"/>
								</header>
							</Column>
							<Column>
								<header>
									<Text text="Cliente"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="Referencia"/>
								</header>
							</Column>
							<Column>
								<header>
									<Text text="Fecha de Registro"/>
								</header>
							</Column>
							<Column hAlign="End">
								<header>
									<Text text="Importe"/>
								</header>
								
							</Column>
						</columns>
						<headerToolbar>
							<Toolbar xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" width="auto"
								id="toolbar2">
								<content>
									<Title xmlns="sap.m" text="{appTxts>/invoice.invoice}" id="title1"/>
									<ToolbarSpacer width="" id="spacer1"/>
									<SearchField value="" placeholder="Buscar" showSearchButton="true" visible="true" width="auto" search="providersSearch"/>
									<Select xmlns:mvc="sap.ui.core.mvc" xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.commons.layout"
										xmlns="sap.m" id="selectFilterMPed">
										<items>
											<core:Item xmlns:core="sap.ui.core" key="SupplierInvoice" text="Num. Factura Preliminar" id="item1"/>
											<core:Item xmlns:core="sap.ui.core" key="CompanyCodeName" text="Cliente" id="item2"/>
											<core:Item xmlns:core="sap.ui.core" text="Referencia" key="ReferenceDocument" id="item3"/>
											<core:Item xmlns:core="sap.ui.core" key="SupplierName" text="Nombre del proveedor" id="item4"/>
										</items>
									</Select>
									<Button xmlns:mvc="sap.ui.core.mvc" xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.commons.layout"
										xmlns="sap.m" text="Enviar aclaracion" id="button1" icon="sap-icon://discussion" type="Emphasized" press="aclaracionButton"/>
								</content>
							</Toolbar>
						</headerToolbar>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>