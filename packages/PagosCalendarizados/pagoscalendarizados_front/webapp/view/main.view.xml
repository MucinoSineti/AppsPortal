<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified"
    xmlns:core="sap.ui.core"
    controllerName="pagoscalendarizadosfront.controller.main"
>
    <Page
        id="page"
        title="{i18n>plan.title}"
        showHeader="true"
        showFooter="false"
        showNavButton="false"
        navButtonPress="onNavBack"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <Table
                id="documentList"
                items="{Payments>/}"
                mode="MultiSelect"
                fixedLayout="true"
                width="auto"
                noDataText="{i18n>plan.noData}"
                sticky="HeaderToolbar,InfoToolbar,ColumnHeaders"
                class="sapUiSizeCompact"
            >
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
                <items>
                    <ColumnListItem
                        type="Active"
                        id="item0"
                    >
                        <cells>
                            <Text
                                text="{Payments>SupplierInvoice}"
                                id="text3"
                            />
                            <Text
                                text="{Payments>SupplierName}"
                                id="text3_4"
                                width="auto"
                                maxLines="3"
                                wrapping="true"
                                textAlign="Begin"
                                textDirection="Inherit"
                            />
                            <Text
                                text="{Payments>CompanyCodeName}"
                                id="text5_copy3"
                            />
                            <Text
                                text="{Payments>ReferenceDocument}"
                                id="text5"
                            />
                            <Text
                                text="{path: 'Payments>CreationDate', formatter: '.formatDate'}"
                                id="text4"
                            />
                            <Text
                                text="{path: 'Payments>ExpiryDate', formatter: '.formatDate'}"
                                id="text5_copy"
                            />
                            <Text
                                text="{Payments>PayDate}"
                                id="text0"
                            />
                            <ObjectNumber
                                xmlns:mvc="sap.ui.core.mvc"
                                xmlns:unified="sap.ui.unified"
                                xmlns:core="sap.ui.core"
                                xmlns:layout="sap.ui.commons.layout"
                                xmlns="sap.m"
                                number="{parts: [{path: 'Payments>SupplierInvoiceItemAmount'}, {path: 'Payments>DocumentCurrency'}], type:'sap.ui.model.type.Currency', formatOptions: {showMeasure:false}}"
                                unit="{Payments>DocumentCurrency}"
                                emphasized="false"
                                state="None"
                                id="number1"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
                <columns>
                    <Column
                        id="column0"
                        width="auto"
                    >
                        <header>
                            <Label
                                text="{i18n>plan.numFactura}"
                                id="label0"
                            />
                        </header>
                    </Column>
                    <Column
                        id="column_0"
                        width="auto"
                    >
                        <header>
                            <Label
                                text="{i18n>plan.nombreProveedor}"
                                id="label_10"
                            />
                        </header>
                    </Column>
                    <Column
                        id="column3_copy"
                        width="auto"
                    >
                        <header>
                            <Label
                                text="{i18n>plan.cliente}"
                                width="auto"
                                id="label3_copy"
                            />
                        </header>
                    </Column>
                    <Column
                        id="column2"
                        width="auto"
                    >
                        <header>
                            <Label
                                text="{i18n>plan.referencia}"
                                id="label2"
                            />
                        </header>
                    </Column>
                    <Column
                        id="column1"
                        width="200px"
                    >
                        <header>
                            <Label
                                text="{i18n>plan.fechaRecepcion}"
                                id="label1"
                            />
                        </header>
                    </Column>
                    <Column
                        id="column3"
                        width="200px"
                    >
                        <header>
                            <Label
                                text="{i18n>plan.fechaVencimiento}"
                                width="auto"
                                id="label3"
                            />
                        </header>
                    </Column>
                    <Column
                        id="column3_1549907989109"
                        width="200px"
                    >
                        <header>
                            <Label
                                text="{i18n>plan.fechaPagoSugerida}"
                                width="auto"
                                id="label0_1549908171856"
                            />
                        </header>
                    </Column>
                    <Column id="column3_copy2">
                        <header>
                            <Label
                                text="{i18n>plan.importe}"
                                width="auto"
                                id="label3_copy2"
                            />
                        </header>
                    </Column>
                </columns>
                <headerToolbar>
                    <Toolbar
                        width="auto"
                        height="46px"
                        design="Auto"
                        visible="true"
                        enabled="true"
                        id="toolbar1"
                    >
                        <content>
                            <Title
                                text="{i18n>plan.cuentaPorCobrar}"
                                titleStyle="Auto"
                                width="auto"
                                textAlign="Begin"
                                visible="true"
                                id="title0"
                            />
                            <ToolbarSpacer id="spacer0" />
                            <SearchField
                                value=""
                                placeholder="{i18n>plan.buscar}"
                                showSearchButton="true"
                                visible="true"
                                width="auto"
                                search="providersSearch"
                                id="field0"
                            />
                            <Select id="selectFilterMPed">
                                <items>
                                    <core:Item
                                        key="SupplierInvoice"
                                        text="{i18n>plan.numFactura}"
                                        id="item0_1549392869716"
                                    />
                                    <core:Item
                                        key="CompanyCodeName"
                                        text="{i18n>plan.cliente}"
                                        id="item1"
                                    />
                                    <core:Item
                                        text="{i18n>plan.referencia}"
                                        key="ReferenceDocument"
                                        id="item2"
                                    />
                                    <core:Item
                                        text="{i18n>plan.nombreProveedor}"
                                        key="SupplierName"
                                        id="item_3"
                                    />
                                </items>
                            </Select>
                            <Button
                                text="{i18n>plan.enviarAclaracion}"
                                id="button1_copy"
                                icon="sap-icon://discussion"
                                type="Emphasized"
                                press="aclaracionButton"
                            />
                        </content>
                        <tooltip />
                    </Toolbar>
                </headerToolbar>
            </Table>
        </content>
    </Page>
</mvc:View>
